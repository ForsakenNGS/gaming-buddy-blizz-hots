<div id="hots-modal-ban-learn" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog text-dark" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Correct ban detection</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <select id="hots-modal-ban-learn-hero" class="form-control">
                {% for heroId, heroName in plugin.gameData.heroes.name[plugin.getConfigValue("language")] %}
                    <option value="{{ heroId }}">{{ heroName }}</option>
                {% endfor %}
                </select>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>