    <a data-field="map" href="#" class="mx-1 badge {% if sortField[team]=='map' %}badge-primary{% else %}badge-secondary{% endif %}">
        Map
    </a>
    <a data-field="tier" href="#" class="mx-1 badge {% if sortField[team]=='tier' %}badge-primary{% else %}badge-secondary{% endif %}">
        Tier
    </a>
</div>
<script type="text/javascript">
$(function() {
    let plugin = gui.getPlugin("{{ plugin.name }}").frontend;

    $(".heroescounters-sort a").on("click", function(e) {
        plugin.sendMessage("draft.provider", "sortBy", "{{ team }}", $(this).attr("data-field"))
    });
});
</script>