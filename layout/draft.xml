<?xml version="1.0" encoding="utf-8"?>
<layout id="draft">
    <!-- For internal use -->
    <layout id="ban.compare.size" manual="true" width="20" height="20"></layout>

    <!-- Top Area (Map name, Timer and Bans) -->
    <layout id="top" left="292/1920" top="10/1080" width="1343/1920" height="140/1080">
        <!-- Color of the map name text -->
        <color id="mapName" r="206" g="255" b="255" toleranceLum="25" toleranceHue="15"></color>
        <!-- Background of an empty ban slot -->
        <color id="bans.background" r="16" g="4" b="24" toleranceLum="20" toleranceHue="20"></color>
        <!-- Timer colors -->
        <color id="timer.blue" r="20" g="30" b="75" toleranceLum="25" toleranceHue="5"></color>
        <color id="timer.red" r="70" g="10" b="30" toleranceLum="25" toleranceHue="5"></color>
        <color id="timer.ban" r="140" g="40" b="170" toleranceLum="25" toleranceHue="5"></color>
        <!-- Ban color when active -->
        <color id="bans.active" r="250" g="200" b="255" toleranceLum="25" toleranceHue="15"></color>
        <color id="bans.active" r="240" g="180" b="24" toleranceLum="25" toleranceHue="15"></color>
        <color id="bans.active" r="240" g="0" b="210" toleranceLum="25" toleranceHue="15"></color>
        <!-- Timer colors -->
        <color id="timer.blue" r="20" g="30" b="75" toleranceLum="25" toleranceHue="5"></color>
        <color id="timer.red" r="70" g="10" b="30" toleranceLum="25" toleranceHue="5"></color>
        <color id="timer.ban" r="140" g="40" b="170" toleranceLum="25" toleranceHue="5"></color>
        <!-- Map name area -->
        <layout id="mapName" left="408/1343" top="0" width="520/1343" height="28/140">
            <filter type="replace-color">
                <replacement from="mapName" to="black"></replacement>
                <replacement to="white"></replacement>
            </filter>
            <filter type="trim-background" background="white"></filter>
            <filter type="ocr"></filter>
        </layout>
        <!-- Pick timer area -->
        <layout id="pickTimer" left="614/1343" top="32/140" width="108/1343" height="108/140">
            <layout id="top" height="30/108"></layout>
        </layout>
        <!-- Blue ban slots -->
        <layout id="bans.blue" manual="true" left="0" top="26/140" width="297/1343" height="32/140">
            <layout id="0" left="0" top="0" width="49/297" height="100%"></layout>
            <layout id="1" left="1/3" top="0" width="49/297" height="100%"></layout>
            <layout id="2" left="2/3" top="0" width="49/297" height="100%"></layout>
        </layout>
        <!-- Red ban slots -->
        <layout id="bans.red" manual="true" right="0" top="26/140" width="297/1343" height="32/140">
            <layout id="0" right="0" top="0" width="49/297" height="100%"></layout>
            <layout id="1" right="1/3" top="0" width="49/297" height="100%"></layout>
            <layout id="2" right="2/3" top="0" width="49/297" height="100%"></layout>
        </layout>
    </layout>

    <!-- Boost icon -->
    <color id="boost" r="30" g="200" b="200" toleranceLum="25" toleranceHue="20"></color>
    <color id="boost" r="20" g="80" b="95" toleranceLum="25" toleranceHue="10"></color>

    <!-- Player picks -->
    <layout id="picks.blue" left="3/1920" top="52/1080" width="308/1920" height="898/1080">
        <!-- Blue team -->
        <layout id="0" left="0" top="0" width="206/308" height="222/898">
            <include file="draft_player_blue.xml"></include>
        </layout>
        <layout id="1" left="99/308" top="169/898" width="206/308" height="222/898">
            <include file="draft_player_blue.xml"></include>
        </layout>
        <layout id="2" left="0" top="338/898" width="206/308" height="222/898">
            <include file="draft_player_blue.xml"></include>
        </layout>
        <layout id="3" left="99/308" top="507/898" width="206/308" height="222/898">
            <include file="draft_player_blue.xml"></include>
        </layout>
        <layout id="4" left="0" top="676/898" width="206/308" height="222/898">
            <include file="draft_player_blue.xml"></include>
        </layout>
    </layout>
    <layout id="picks.red" right="3/1920" top="52/1080" width="308/1920" height="898/1080">
        <!-- Red team -->
        <layout id="0" right="0" top="0" width="206/308" height="222/898">
            <include file="draft_player_red.xml"></include>
        </layout>
        <layout id="1" right="99/308" top="169/898" width="206/308" height="222/898">
            <include file="draft_player_red.xml"></include>
